<%- include('partials/header'); -%>

<body>

    <h1>User's Wishlist</h1>

    <% if (books) { %>
        <table border="1">
            <thead>
                <tr>
                    <th>ISBN</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Category</th>
                    <!-- Add more columns if needed -->
                </tr>
            </thead>
            <tbody>
                <% books.forEach(book => { %>
                    <tr>
                        <td><%= book.ISBN %></td>
                        <td><%= book.title %></td>
                        <td><%= book.author.name %></td>
                        <td><%= book.category.name %></td>
                        <!-- Add more columns if needed -->
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No books in the wishlist.</p>
    <% } %>

    <!-- Add any additional content or scripts if needed -->

</body>



<%- include('partials/footer'); -%>